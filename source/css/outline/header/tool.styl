.container>header .tool {
  position: fixed;
  right: 10px;
  top: 300px;
  z-index: $zindex-2;

  .item {
    display: none;
    width: 30px;
    height: 30px;
    opacity: .5;
    cursor: pointer;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    the-transition();
    &:hover {
      opacity: .9;
    }
  }

  .player {
    display: inline-flex;
    flex-direction: row-reverse;
    font-size: $font-size-largest;
    width: auto;
    height: auto;

    > div {
      font-family-icons();
      width: 30px;
      text-align: center;
      &+div {
        margin-right: 10px;
      }
    }

    .play-pause {
      &::before {
        @extend .i-play:before;
      }
    }

    .music {
      display: none;
      &::before {
        @extend .i-music:before;
      }
    }

    &.playing {
      .play-pause::before {
        @extend .i-pause:before;
      }
    }
  }


  .play-list {
    position: fixed;
    display: none;
    bottom: 0;
    right: 45px;
    width: auto;
    z-index: $zindex-2;
    border-radius: 10px;
    background: var(--grey-1);
    color: var(--text-color);
    font-size: $font-size-base;
    text-shadow: none;
    text-align: left;
    shadow-box();

    ul {
      font-size: $font-size-smaller;
      padding: 5px 0;
      margin: 0px;
      min-width: 260px;
      max-width: 300px;
      max-height: 300px;
      overflow-x: scroll;
    }

    li {
      padding: 5px 15px 5px 25px;
      cursor: pointer;
      the-transition();
      &::before {
        display: none;
        font-family-icons();
        @extend .i-play:before;
        margin-left: -20px;
        width: 20px;
      }

      &.current {
        color: var(--primary-color);
        position:relative;

        &::before {
          display: inline-block;
        }

        > div {
          position: absolute;
          height: 100%;
          background: var(--color-pink-a3);
          top: 0;
          left: 0;
          z-index: -1;
          the-transition(.2s, ease-out);
        }
      }

      &:hover {
        color: var(--color-blue);
      }
    }
  }

  .back-to-top {
    span {
      font-size: $font-size-smallest;
    }
  }


  &.affix {
    text-shadow: none;
    right: 0px;
    top: auto;
    bottom: 0px;

    .item {
      display: flex;
      background: var(--color-red);
      margin-top: 2px;
      border-radius: 2px;
    }

    .player {
      font-size: $font-size-base;
      flex-direction: column-reverse;

      > div+div {
        margin-right: 0;
      }

      .music {
        display: block;
      }

    }

    .play-list {
      &.on {
        display: block;
        animation: slideRightIn .5s;
      }
    }

    .back-to-top {
      align-items: center;
      justify-content: center;
      height: auto;
      padding: 5px 0 0;
    }
  }
}






